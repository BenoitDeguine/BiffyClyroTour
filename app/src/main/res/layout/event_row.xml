<?xml version="1.0" encoding="utf-8"?><!-- Parent linear layout with vertical orientation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Child linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundRow"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/month"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#e66b6b"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="Janvier" />

            <TextView
                android:id="@+id/day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="5dip"
                android:textStyle="bold"
                android:text="31" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#caa01a"
                android:padding="2dip"
                android:textSize="17sp"
                android:text="Home" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/event_city"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:padding="2dip"
                android:text="About" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/countdown"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="J-132" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>